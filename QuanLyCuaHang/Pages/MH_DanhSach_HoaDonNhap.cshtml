@page
@model QuanLyCuaHang.Pages.MH_DanhSach_HoaDonNhapModel
@using Entities
@using XuLyNghiepVu
@{
    HoaDonNhapHang[]? danhSach = XL_HoaDonNhap.DocDanhSach();
    int page = 1;
    int itemsPerPage = 10;
    int totalItems = danhSach.Length;
    int totalPages = (int)Math.Ceiling((double)totalItems / itemsPerPage);

    if (Request != null && Request.Query.Keys.Count > 0)
    {
        page = int.Parse(Request.Query["page"]);
    }

    if (Request.Method == "POST")
    {
        string tukhoa = Request.Form["tukhoa"];
        string danhmuctimkiem = Request.Form["danhmuctimkiem"];
        danhSach = XL_HoaDonNhap.DocDanhSach(tukhoa, danhmuctimkiem);
        totalItems = danhSach.Length;
        totalPages = (int)Math.Ceiling((double)totalItems / itemsPerPage);
    }
}

<div class="div">
    <h2 class="h2" style="text-align: center;">Phần mềm quản lý cửa hàng</h2>
</div>

<div class="div div-space">
    <a href="MH_DanhSach_MatHang"><button class="button">Danh sách mặt hàng</button></a>
    <a href="MH_DanhSach_LoaiHang"><button class="button">Danh Sách loại hàng</button></a>
    <a href="MH_DanhSach_HoaDonBan"><button class="button">Hóa đơn bán hàng</button></a>
    <a href="MH_DanhSach_HoaDonNhap"><button class="button button-highlight">Hóa đơn nhập hàng</button></a>
    <a href="MH_DanhSach_MatHang_TonKho"><button class="button">Danh sách tồn kho</button></a>
    <a href="MH_DanhSach_MatHang_HetHan"><button class="button">Danh sách hết hạn</button></a>
</div>


<div class="div">
    <div class="div2">
        <h2 class="h2">Danh sách hóa đơn nhập hàng</h2>
        <a href="MH_Them_HoaDonNhap"><button class="button-them">Thêm Hóa đơn nhập hàng</button></a>
    </div>

    <div class="form-timkiem">
        <form method="post">
            <div area-hidden="true" class="select-tim">
                <select name="danhmuctimkiem">
                    <option value="" disabled selected>Tìm kiếm theo</option>
                    <option name="mahoadon" value="mahoadon">Mã hóa đơn</option>
                    <option name="mahang" value="mahang">Mã hàng</option>
                    <option name="tenhang" value="tenhang">Tên hàng</option>
                </select>
            </div>
            <input id="tukhoa" type="text" name="tukhoa" value="" placeholder="Nhập từ khóa ..." /><br />
            <input type="submit" value="&#128269 Tìm" class="button-tim" />
        </form>
    </div>

    @if (danhSach != null) {
        <table>
            <tr>
                <th>Mã hóa đơn</th>
                <th>Ngày tạo</th>
                <th>Mã hàng</th>
                <th>Tên hàng</th>
                <th>Số lượng</th>
                <th>Giá nhập</th>
                <th>Thành tiền</th>
                <th>Action</th>
            </tr>
            @foreach (HoaDonNhapHang hd in danhSach.Skip((page - 1) * itemsPerPage).Take(itemsPerPage))
            {
                <tr>
                    <td>@hd.MaHoaDon</td>
                    <td>@hd.NgayTao</td>
                    <td>@hd.MaHang</td>
                    <td>@hd.TenHang</td>
                    <td>@hd.SoLuong</td>
                    <td>@hd.GiaNhap</td>
                    <td>@hd.ThanhTien</td>
                    <td>
                        <a href="MH_Sua_HoaDonNhap?mahoadon=@hd.MaHoaDon">Sửa</a>
                        <a href="MH_Xoa_HoaDonNhap?mahoadon=@hd.MaHoaDon">Xóa</a>
                    </td>
                </tr>
            }
        </table>
    }

    <div class="pagination" style="margin: 10px;">
        @if (totalPages > 1)
        {
            <a href="?page=1">&laquo; First</a>

            @for (int i = 1; i <= totalPages; i++)
            {
                <a href="?page=@i">@i</a>
            }

            <a href="?page=@totalPages">Last &raquo;</a>
        }
    </div>

    @if (danhSach == null)
    {
        <div>Không tìm thấy mã hóa đơn</div>
    }
</div>