@page
@model WEB.Pages.MH_Sua_MatHang
@using Entities;
@{
    ViewData["Title"] = "Sua mat hang";
}

<div class="div div-space">
    <h2>Sửa mặt hàng</h2>
</div>

<div class="div">
    @if (Model.matHang != null)
    {
        <form method="post">
            <label for="mahang" class="label-form">Mã hàng</label>
            <input id="mahang" type="text" readonly name="mahang" value="@Model.matHang.MaHang"><br>

            <label for="tenhang" class="label-form">Tên mặt hàng</label>
            <input id="tenhang" type="text" name="tenhang" value="@Model.matHang.TenHang" /><br />

            <lable for="loaihang" class="label-form">Loại hàng</lable>
            <select name="loaihang">
                <option value="" disabled selected>Chọn loại hàng</option>
                @foreach (string tenLoaiHang in Model.dsTenLoaiHang)
                {
                    if (tenLoaiHang == Model.matHang.LoaiHang)
                    {
                        <option value="@tenLoaiHang" selected>@tenLoaiHang</option>
                    }
                    else
                    {
                        <option value="@tenLoaiHang">@tenLoaiHang</option>
                    }
                }
            </select>

            <label for="congtysanxuat" class="label-form">Công ty sản xuất</label>
            <input id="congtysanxuat" type="text" name="congtysanxuat" value="@Model.matHang.CongTySanXuat" /><br />



            <label for="handung" class="label-form">Hạn sử dụng</label><br />
            <input id="handung" type="date" name="handung" value="@Model.matHang.HanDung" placeholder="dd-mm-yyyy" /><br />



            <label for="ngaysanxuat" class="label-form">Ngày sản xuất</label>
            <input id="ngaysanxuat" type="date" name="ngaysanxuat" value="@Model.matHang.NgaySanXuat" placeholder="dd-mmm-yyyy" /><br />



            <label for="giaban" class="label-form">Giá bán</label>
            <input id="giaban" type="text" name="giaban" value="@Model.matHang.GiaBan" /><br />

            <input type="submit" value="Sửa" class="button-them-sua" />
        </form>



        @if (Model.message == "Successful")
        {
            <script>alert("Sửa mặt hàng thành công!");
                window.location.href = "MH_DanhSach_MatHang";</script>
        }
        else
        {
            <h3 class="h3">@Model.message</h3>
        }
    }
    @if (Model.matHang == null)
    {
        <h3 class="h3">@Model.message</h3>
    }

</div>