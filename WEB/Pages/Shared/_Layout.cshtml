<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/QuanLyCuaHang.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        .h2 {
            font-size: 30px; /* Adjust the font size as needed */
            color: #4D5368; /* Text color */
            margin-bottom: 0; /* Add margin below the h2 */
        }

        .h3 {
            font-size: 20px; /* Adjust the font size as needed */
            color: #E12F2F; /* Text color */
            margin-top: 20px; /* Add margin below the h2 */
        }

        .button {
            display: inline-flex;
            justify-content: space-between;
            margin-inline: 35px; /* Add margin to create space between buttons */
            padding: 10px 20px; /* Adjust padding to control button size */
            font-size: 16px; /* Adjust font size */
            background-color: #5CB6A3; /* Button background color */
            color: #fff; /* Button text color */
            border: none; /* Remove button border */
            border-radius: 4px; /* Add rounded corners */
            text-align: center;
            text-decoration: none; /* Remove underline */
            cursor: pointer;
            transition: background-color 0.3s;
            font-weight: bold;
        }

            .button:hover {
                background-color: #2980b9; /* Change background color on hover */
            }

        .button-highlight {
            background-color: #D65990
        }

        .button-them {
            display: inline-flex;
            padding: 10px 20px; /* Adjust padding to control button size */
            font-size: 16px; /* Adjust font size */
            background-color: #4CAF50; /* Button background color */
            color: #fff; /* Button text color */
            border: none; /* Remove button border */
            border-radius: 4px; /* Add rounded corners */
            text-align: center;
            text-decoration: none; /* Remove underline */
            cursor: pointer;
            position: relative;
            right: 10px;
        }

        .button-them-sua {
            display: inline-flex;
            justify-content: center;
            align-items: center;
            width: 200px;
            padding: 10px 20px; /* Adjust padding to control button size */
            font-size: 16px; /* Adjust font size */
            background-color: #4CAF50; /* Button background color */
            color: #fff; /* Button text color */
            border: none; /* Remove button border */
            border-radius: 4px; /* Add rounded corners */
            text-align: center;
            text-decoration: none; /* Remove underline */
            cursor: pointer;
            position: relative;
            left: 0px;
            margin-top: 10px;
            font-weight: bold
        }

            .button-them-sua:hover {
                background-color: #2980b9; /* Change background color on hover */
            }


        .button-tim {
            width: 13.5%;
            background-color: #4CAF50;
            color: white;
            padding: 10px 20px;
            margin: 8px 0;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            display: inline-block;
        }

            .button-tim:hover {
                background-color: #2980b9;
            }

        .button-container {
            position: relative;
            overflow: hidden;
            display: flex;
            align-items: center;
            justify-content: flex-start;
            margin-top: 20px;
        }

        .button-xoa {
            display: inline-flex;
            justify-content: center;
            align-items: center;
            width: 100px;
            margin-inline: 10px; /* Add margin to create space between buttons */
            padding: 10px 20px; /* Adjust padding to control button size */
            font-size: 16px; /* Adjust font size */
            background-color: #C24362; /* Button background color */
            color: #fff; /* Button text color */
            border: none; /* Remove button border */
            border-radius: 4px; /* Add rounded corners */
            text-align: center;
            text-decoration: none; /* Remove underline */
            cursor: pointer;
            transition: background-color 0.5s;
            font-weight: bold;
            position: relative;
            left: -10px;
        }

            .button-xoa:hover {
                background-color: #2980b9; /* Change background color on hover */
            }

        .button-cancel {
            display: inline-flex;
            justify-content: center;
            align-items: center;
            width: 100px;
            margin-inline: 10px; /* Add margin to create space between buttons */
            padding: 10px 20px; /* Adjust padding to control button size */
            font-size: 16px; /* Adjust font size */
            background-color: #4CAF50; /* Button background color */
            color: #fff; /* Button text color */
            border: none; /* Remove button border */
            border-radius: 4px; /* Add rounded corners */
            text-align: center;
            text-decoration: none; /* Remove underline */
            cursor: pointer;
            transition: background-color 0.5s;
            font-weight: bold;
        }

            .button-cancel:hover {
                background-color: #2980b9; /* Change background color on hover */
            }

        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 99.2%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }

        .form-timkiem form {
            display: flex; /* Use flexbox to align elements in the same line */
            justify-content: space-between; /* Add space between the elements */
            align-items: center; /* Vertically center the elements */
            margin-right: 10px;
            margin-bottom: 10px;
        }

        input[type=text], select {
            width: 100%;
            padding: 10px 20px;
            margin: 8px 0;
            display: inline-block;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }

        input[type=date], select {
            width: 100%;
            padding: 10px 20px;
            margin: 8px 0;
            display: inline-block;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }

        .select-tim {
            width: 22%;
            align-items: left;
            color: #E6ECBC;
        }

        .div {
            border-radius: 5px;
            background-color: #f2f2f2;
            padding: 20px;
            margin: 10px
        }

        .div2 {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 20px;
        }

        .div-space {
            display: flex;
        }

        .pagination {
            display: inline-block;
        }

            .pagination a {
                color: black;
                float: left;
                padding: 8px 16px;
                text-decoration: none;
                border: 1px solid #ddd;
                position: relative;
                left: -10px;
            }

                .pagination a.active {
                    background-color: #4CAF50;
                    color: white;
                    border: 1px solid #4CAF50;
                }

                .pagination a:hover:not(.active) {
                    background-color: #ddd;
                }

                .pagination a:first-child {
                    border-top-left-radius: 5px;
                    border-bottom-left-radius: 5px;
                }

                .pagination a:last-child {
                    border-top-right-radius: 5px;
                    border-bottom-right-radius: 5px;
                }

        .label {
            display: inline-block;
            text-align: left;
            width: 150px; /* Adjust the width as needed to align the colons properly */
            margin-right: 20px; /* Add some margin for spacing */
        }

        .label-form {
            font-weight: bold;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/MH_DanhSach_MatHang">Quản lý cửa hàng</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/MH_DanhSach_MatHang">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - QuanLyCuaHang - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
